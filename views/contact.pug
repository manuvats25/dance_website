extends base.pug
block scripts 
    script(src='/static/index.js')
block style 
    style 
        include ../static/style.css 
        include ../static/stylecontact.css
block content 
    div.container
        
        h1 Contact us
        form(action="/contact",method="post",class="myform")
            input(type="text",class="myinput",name="name",placeholder="Ente your name")
            input(type="phone",class="myinput",name="phone",placeholder="Ente your Phone no.")
            input(type="email",class="myinput",name="email",placeholder="Ente your Email")
            input(type="text",class="myinput",name="address",placeholder="Ente your Address")
            button 
                |submit